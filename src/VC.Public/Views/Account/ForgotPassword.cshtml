@using System.Threading.Tasks
@using VC.Public.Models.Auth
@model ForgotPasswordEmailModel

@section Meta {
    <title>Vital Choice | Forgot Password</title>
}

<div class="working-area-holder">
    @using (Html.BeginForm("ForgotPassword", "Account", null, FormMethod.Post, new { @class = "form-regular small", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Get Your Forgotten Password</h4>
        @Html.ValidationSummary(true, "")
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            <div class="input-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "")
            </div>
        </div>
        <div class="form-buttons-group">
            <input type="submit" value="Continue" />
            <input type="button" value="Back" onclick="location.href='@Url.Action("Login")'" />
        </div>
    }
    <div class="form-group">
        <hr />
    </div>
</div>
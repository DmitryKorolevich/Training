                            <i class="tooltip-l glyphicon glyphicon-question-sign tooltipstered" data-tooltip-title="Gift Certificate Code" data-tooltip-body="If you have a gift certificate code, enter it in the box to see the change in your order's total."></i>
                            <div data-bind="foreach:Model.GiftCertificateCodes">
                                <div>
                                    <!-- ko if: $index() == 0 -->
                                    <label>Gift Certificate Code</label>
                                    <a id="btnAddGc" class="circle-button button-green" data-bind="click: $parent.addGc, visible: $index() == 0">
                                        <i class="glyphicon glyphicon-plus-sign"></i>
                                    </a>
                                    <!-- /ko -->
                                    <!-- ko if: $index() != 0 --><!-- /ko -->

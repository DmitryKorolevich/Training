                        <span class="success-message-box" data-bind="text: Model.DiscountMessage, visible: Model.DiscountMessage &amp;&amp; isDiscountValid(Model)"></span>
                        <span class="field-validation-error" data-bind="if: !isDiscountValid(Model)" data-valmsg-for="DiscountCode" data-valmsg-replace="true"></span>

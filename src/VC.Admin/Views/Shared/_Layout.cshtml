@using System.Threading.Tasks
@using VitalChoice.Infrastructure.Domain.Options
@using Microsoft.Extensions.Options
@inject IOptions<AppOptions> appOptions;
<!DOCTYPE html>
<html data-ng-app="mainApp" data-ng-strict-di data-ng-init="buildNumber='@appOptions.Value.Versioning.BuildNumber';PublicHost='@appOptions.Value.PublicHost'">
<head>
    <base href="/">
    <title>Vital Choice Admin</title>
    <link rel="icon" type="img/ico" href="/assets/miscellaneous/favicon.ico">
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    @await Component.InvokeAsync("Assets", new { assetType = "styles" })
    <script src="/app/app.ie.js"></script>
</head>
<body>
    @RenderBody()
    <script src="/lib/tinymce/tinymce.min.js"></script>
    @await Component.InvokeAsync("Assets", new { assetType = "scripts" })
</body>
</html>